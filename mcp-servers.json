{
  "mcpServers": {
    "tree-sitter": {
      "command": "/home/vedat/.claude/mcp/tree-sitter-env/bin/python3",
      "args": [
        "-m",
        "mcp_server_tree_sitter.server"
      ],
      "env": {}
    },
    "atlassian": {
      "command": "npx",
      "args": ["-y", "mcp-atlassian"],
      "env": {
        "JIRA_URL": "https://dnext-technology.atlassian.net",
        "JIRA_USERNAME": "vedat.hallac@dnext-technology.com",
        "CONFLUENCE_URL": "https://dnext-technology.atlassian.net/wiki",
        "CONFLUENCE_USERNAME": "vedat.hallac@dnext-technology.com",
        "JIRA_API_TOKEN": "${ATLASSIAN_API_TOKEN}",
        "CONFLUENCE_API_TOKEN": "${ATLASSIAN_API_TOKEN}"
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      }
    }
  }
}
